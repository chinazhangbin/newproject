<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kyj.dao.user.UserDao" >

	<select id="getUserByName" resultType="com.kyj.domain.user.User" >
		select * 
		from user u
		where u.name=#{name}
	</select>
</mapper>